from tkinter import*
root=Tk()
root.maxsize(width=350,height=333)#maxmum size of our gui
root.minsize(width=348,height=423)#minimum size of our gui
root.geometry('340x122')
root.title("button")
button=Button(root,text="Stop every one").grid(row=1)
button1=Button(root,text="Go every one").grid(row=2)
button2=Button(root,text="Seat Down every one").grid(row=3)
e1=Entry(root).grid(row=1,column=1)
e2=Entry(root).grid(row=2,column=1)
e3=Entry(root).grid(row=3,column=1)

root.mainloop()
